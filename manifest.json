{
    "manifest_version": 2,
    "name": "YT-Improver",
    "version": "0.0.1",

    "description": "Adds a red border to all webpages matching mozilla.org.",
    "homepage_url": "https://github.com/turradeira/YT-Improver",
  
    "icons": {
      "48": "icons/border-48.png"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.mozilla.org/*"],
        "js": ["yt-improver.js"]
      }
    ]
}